########################################
# Backend environment variables (.env)
# Copy this file to .env and fill values
########################################

# Server
# Port the Express server listens on
PORT=5001

# Database
# Use your local MongoDB or a hosted connection string
# Example local: mongodb://127.0.0.1:27017/aptrack
# Example Atlas: mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority
MONGO_URI=

# Auth
# Secret used to sign JWT tokens
JWT_SECRET=

# File storage
# Toggle Cloudinary usage. If false, files are stored locally under /uploads
USE_CLOUDINARY=false

# Cloudinary credentials (required if USE_CLOUDINARY=true)
CLOUD_NAME=
CLOUD_API_KEY=
CLOUD_API_SECRET=

# Public URL of this backend (used to build absolute URLs for locally stored files)
# Set this in production (e.g., your Render service URL). If not set, will fall back to localhost:PORT.
BACKEND_PUBLIC_URL=

# Note: On Render, RENDER_EXTERNAL_HOSTNAME is provided automatically and may be used as a fallback.
